<html>
  <head>
    <title>blog</title>
  </head>
  <body>
    <ul>
      <% articles.each_with_index do |article, index| %>
        <li>
          <h1><%= article[:title] %></h1>
          <p><%= article[:date] %></p>
          <p><%= article[:content] %></p>
          <a href="/article?id=<%=index%>">Read more about <%= article[:title] %></a>
        </li>
      <% end %>
    </ul>
  </body>
</html>
